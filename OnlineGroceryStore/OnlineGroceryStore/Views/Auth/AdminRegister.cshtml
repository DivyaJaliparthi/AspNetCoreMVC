@model OnlineGroceryStore.AdminDetailsModel.Admindetail
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminRegister</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        /*.center_div {
            margin: 0 auto;
            width: 80%*/ /* value of your choice which suits your alignment */
        /*}*/
    </style>
</head>
<body>

    <h4>Admin Register</h4>
    <hr />
    <div class="row">

        <div class="col-md-4">
            <form asp-action="AdminRegister" asp-controller="Auth" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="AdminName" class="control-label"></label>
                    <input type="text" asp-for="AdminName" class="form-control col-md-4" placeholder="Enter Name" required />
                    @*<span asp-validation-for="AdminName" class="text-danger"></span>*@
                </div>
                <div class="form-group">

                    <label asp-for="AdminPassword" class="control-label"></label>
                    <input type="password" asp-for="AdminPassword" class="form-control col-md-4" placeholder="Enter Password" required />
                    @*<span asp-validation-for="AdminPassword" class="text-danger"></span>*@
                </div>
                <div class="form-group">

                    <label asp-for="AdminEmail" class="control-label"></label>
                    <input type="email" asp-for="AdminEmail" class="form-control col-md-4" placeholder="Enter Email-Id" required />
                    @*<span asp-validation-for="AdminEmail" class="text-danger"></span>*@
                </div>
                <div class="form-group">

                    <label asp-for="AdminPhoneno" class="control-label"></label>
                    <input type="number" asp-for="AdminPhoneno" class="form-control col-md-4" placeholder="Enter Phone Number" required />
                    @*<span asp-validation-for="AdminPhoneno" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-primary" />
                </div>
                @*<div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>*@
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AdminLogin">Click to Login</a>
    </div>

</body>
</html>
